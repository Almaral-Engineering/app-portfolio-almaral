<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/amber_700</item>
        <item name="colorPrimaryDark">@color/amber_900</item>

        <item name="colorAccent">@android:color/holo_red_dark</item>

        <item name="android:textColorPrimary">@android:color/black</item>

    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/amber_700</item>
        <item name="colorPrimaryDark">@color/amber_900</item>
        <item name="colorAccent">@android:color/holo_red_dark</item>

    </style>

    <style name="MainActivityButtonStyle" parent="Base.Widget.AppCompat.Button">

        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background_one</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>
